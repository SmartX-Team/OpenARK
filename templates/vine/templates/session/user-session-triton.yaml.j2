---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: triton
  namespace: "{{ metadata.namespace }}"
spec:
  replicas: 1
  selector:
    matchLabels:
      name: triton
  strategy:
    rollingUpdate:
      maxUnavailable: 1
  template:
    metadata:
      labels:
        name: triton
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: node-role.kubernetes.io/kiss
                    operator: In
                    values:
                      - Compute
      initContainers:
        - name: fetch-models
          image: nvcr.io/nvidia/deepstream:6.2-triton
          command:
            - bash
            - -c
          args:
            - >
              cd samples
              && ./prepare_ds_triton_model_repo.sh
              && mv triton_model_repo/* /models/
          volumeMounts:
            - name: models
              mountPath: /models
      containers:
        - name: triton-inference-server
          image: nvcr.io/nvidia/deepstream:6.2-triton
          command:
            - tritonserver
          args:
            - --model-repository=/models
          ports:
            - name: http
              protocol: TCP
              containerPort: 8000
            - name: grpc
              protocol: TCP
              containerPort: 8001
            - name: metrics
              protocol: TCP
              containerPort: 8002
          resources:
            limits:
              nvidia.com/gpu: "1"
          volumeMounts:
            - name: models
              mountPath: /models
      volumes:
        - name: models
          emptyDir: {}
---
apiVersion: v1
kind: Service
metadata:
  name: triton
  namespace: "{{ metadata.namespace }}"
spec:
  selector:
    name: triton
  ports:
    - name: http
      port: 8000
      protocol: TCP
      targetPort: 8000
    - name: grpc
      port: 8001
      protocol: TCP
      targetPort: 8001
    - name: metrics
      port: 8002
      protocol: TCP
      targetPort: 8002
