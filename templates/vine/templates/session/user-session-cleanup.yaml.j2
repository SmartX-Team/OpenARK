---
apiVersion: batch/v1
kind: Job
metadata:
  name: "desktop-cleanup-{{ spec.node.metadata.name }}"
  namespace: "{{ metadata.namespace }}"
spec:
  ttlSecondsAfterFinished: 1
  template:
    metadata:
      labels:
        name: desktop-cleanup
    spec:
      affinity:
        nodeAffinity:
          # KISS ephemeral control plane nodes should be excluded
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: kubernetes.io/hostname
                    operator: In
                    values:
                      - "{{ spec.node.metadata.name }}"
      restartPolicy: OnFailure
      initContainers:
        - name: init-delay
          image: docker.io/library/busybox:latest
          command:
            - sleep
            - "5"
      containers:
        - name: desktop-environment-cleanup
          image: docker.io/library/busybox:latest
          command:
            - /bin/rm
          args:
            - -rf
            - /tmp/.vine/.login.lock
          volumeMounts:
            - name: vine
              mountPath: /tmp/.vine
      volumes:
        - name: vine
          hostPath:
            path: /tmp/.vine
            type: DirectoryOrCreate
