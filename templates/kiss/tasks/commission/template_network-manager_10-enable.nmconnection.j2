[connection]
id={{ item.name }}
uuid={{ item.uuid }}
type=ethernet
interface-name={{ item.name }}

autoconnect=true

[ethernet]
mac-address={{ item.macaddress }}
mtu={{ item.mtu }}

[ipv4]
address1={{ item.address_ipv4 }}/{{ item.address_ipv4_netmask }},{{ item.address_ipv4_gateway }}
dns={{ item.dns | join(';') }};
dns-search=
method=manual

[ipv6]
addr-gen-mode=eui64
dns-search=
method=disabled
