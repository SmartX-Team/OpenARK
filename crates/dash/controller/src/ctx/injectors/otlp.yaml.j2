---
apiVersion: opentelemetry.io/v1alpha1
kind: Instrumentation
metadata:
  name: "{{ metadata.name }}"
  namespace: "{{ metadata.namespace }}"
spec:
  exporter:
    endpoint: "http://{{ metadata.name }}-collector.dash.svc:4317"
  propagators:
    - tracecontext
    - baggage
  sampler:
    type: parentbased_traceidratio
    argument: "1"
